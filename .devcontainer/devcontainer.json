{
    "name": "Android Development Environment",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            "version": "17"
        }
    },
    "remoteUser": "vscode",
    "containerEnv": {
        "DEBIAN_FRONTEND": "noninteractive"
    },
    "runArgs": ["--privileged"],
    "overrideCommand": false,
    "forwardPorts": [
        5901,
        6080
    ],
    "postCreateCommand": "bash .devcontainer/post-create.sh"
}