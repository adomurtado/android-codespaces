{
    "name": "Android Development Environment",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            "version": "17"
        }
    },
    "remoteUser": "vscode",
    "runArgs": ["--privileged"],
    "overrideCommand": false,
    "forwardPorts": [
        5901,
        6080
    ],
    "postCreateCommand": "bash .devcontainer/post-create.sh"
}